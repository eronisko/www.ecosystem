<div class="container autoform">
  <%= form_tag register_step4_services_govbox_index_path do %>
      <%= hidden_field_tag :legal_subject_name, params[:legal_subject_name] %>
      <%= hidden_field_tag :cin, params[:cin] %>
      <%= hidden_field_tag :formatted_address, params[:formatted_address] %>
      <%= hidden_field_tag :given_name, params[:given_name] %>
      <%= hidden_field_tag :family_name, params[:family_name] %>
      <%= hidden_field_tag :pin, params[:pin] %>
      <%= hidden_field_tag :person_formatted_address, params[:person_formatted_address] %>

      <div class="row">
        <div class="col-lg-8">
          <h1 class="form-title">Nastavenie služby</h1>
          <p class="lead form-subtitle">Zadajte údaje pre preposielanie správ a kontaktné údaje.</p>
          <div class="row">
            <div class="col-md-8 form-group">
              <%= label_tag :email, 'Email' %>
              <%= email_field_tag :email, nil, class: 'form-control input-lg', required: true %>
              <span class="form-text text-muted">Kam chcete preposielať správy z elektronickej schránky.</span>
            </div>
            <div class="col-md-4 form-group">
              <%= label_tag :phone, 'Telefónne číslo' %>
              <%= phone_field_tag :phone, nil, class: 'form-control input-lg', required: true %>
              <span class="form-text text-muted">Mobil pre prípad núdze.</span>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 form-group">
              <%= label_tag :postal_address, 'Korešpondenčná adresa' %>
              <%= text_field_tag :postal_address, nil, class: 'form-control input-lg', required: true %>
              <span class="form-text text-muted">Kam budeme zasielať prípadnú poštu.</span>
            </div>
          </div>
          <div class="form-check">
            <%= hidden_field_tag :snail_mail, '0' %>
            <label class="form-check-label">
              <%= check_box_tag :snail_mail, '1', false, class: 'form-check-input' %>
              <strong>Mám záujem si niektoré správy nechať zasielať aj klasickou poštou.</strong>
            </label>
          </div>
        </div>
      </div>

      <div class="row form-navigation">
        <div class="col-md-4 form-group">
          <%= button_tag class: 'btn btn-primary btn-lg' do %>
              <strong>Ďalej</strong>
          <% end %>
        </div>
      </div>
  <% end %>
</div>